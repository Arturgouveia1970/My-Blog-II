<form class='container'>
  <h2>Create a Post </h2>
  <div class="form-group">
    <%= form_with model: Post, url: user_posts_path, method: :post do |form| %>
      <div class="col-xs-12"> 
        <p><%= form.text_field :title, placeholder: 'title ...', class:"form-control" %></p>
      </div>
      <div class='form-group'>
        <p><%= form.text_area :text, placeholder: 'Write your post here...', class:"form-control" %></p>
      </div>
      <%= form.submit "New Post", class:"btn btn-primary mb-2" %>
    <% end %>
  </div>
</form>